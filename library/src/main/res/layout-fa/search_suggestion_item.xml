<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/suggestion_item_background"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="@dimen/square_button_size"
        android:layout_height="@dimen/square_button_size"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/search_bar_left_icon_left_margin"
        android:alpha="1"
        android:padding="@dimen/square_button_padding"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="4"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="right|center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="@dimen/suggestion_body_text_size"
        tools:text="body"
        />


    <TextView
        android:id="@+id/body_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left|center"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="@dimen/suggestion_body_hint_text_size"
        tools:text="hint"
        android:textColor="@color/dark_gray"

        />


</LinearLayout>